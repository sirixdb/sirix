<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
>
	<!-- Name of the JAR (sirix-jar-with-dependencies.jar) -->
	<id>jar-with-dependencies</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<!-- 3rd party jars? -->
	<dependencySets>
    	<dependencySet>
      		<unpack>true</unpack>
      		<scope>runtime</scope>
    	</dependencySet>
  	</dependencySets>
  	<!--  Filter rules... beside includes, also excludes exist -->
  	<fileSets>
  		<fileSet>
      		<includes>
        		<include>changes*</include>
        		<include>conventions*</include>
        		<include>index*</include>
        		<include>license*</include>
        		<include>roadmap*</include>
      		</includes>
    	</fileSet>
    	<fileSet>
    		<directory>src/main/java</directory>
    	</fileSet>
  	</fileSets>
</assembly>
